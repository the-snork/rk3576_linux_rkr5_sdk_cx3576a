+#define LV_VG_LITE_USE_GPU_INIT @BR2_LV_VG_LITE_USE_GPU_INIT@
+
+/* Enable VG-Lite assert. */
+#define LV_VG_LITE_USE_ASSERT @BR2_LV_VG_LITE_USE_ASSERT@
